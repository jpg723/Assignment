		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		
		int choice = 0;
		int money = 0;
		Account a = new Account();
		
		System.out.println("새로운 계좌가 만들어졌습니다.");
		System.out.println("---------------------------");
		System.out.println("1.예금 2.출금 3.잔고 4.종료");
